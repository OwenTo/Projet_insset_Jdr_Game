{% extends 'base.html.twig' %}

{% block title %}Magie index{% endblock %}

{% block body %}
    <h1 class="text-center">liste magie</h1>
<div class="container-fluid ">
    {% if is_granted('ROLE_ADMIN') %}
        <a  class="ml-5  mr-5 btn btn-primary"href="{{ path('magie_new') }}">Ajouter</a>
    {% endif %}


    <div class=" centerText   ml-5  mr-5 card  shadow p-3 mb-5  rounded"
         style="margin-top: 10px; background-color: beige;">
    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Description</th>
                <th>Poids</th>
                <th>Benefice/Maluce</th>
                <th>Valeur</th>
                <th>Degat Magie</th>
                <th>Cout De Mana</th>
                <th>Niveau  Magie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magie in magies %}
            <tr>

                <td>{{ magie.nomItem }}</td>
                <td>{{ magie.descriptionItem }}</td>
                <td>{{ magie.poids }}</td>
                <td>{{ magie.beneficeMaluce }}</td>
                <td>{{ magie.valeur }}</td>
                <td>{{ magie.degatMagie }}</td>
                <td>{{ magie.coutDeMana }}</td>
                <td>{{ magie.niveauMagie }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('magie_show', {'id': magie.id}) }}"><i class="fas fa-info-circle"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary" href="{{ path('magie_edit', {'id': magie.id}) }}"><i class="fas fa-edit"></i></a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucune magie inséré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
