{% extends 'base.html.twig' %}

{% block title %}Liste des Dés{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des Dés</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <a  class="ml-5  mr-5 btn btn-primary"href="{{ path('type_des_new') }}">Ajouter</a>
    {% endif %}
<div class=" centerText   ml-5  mr-5 card  shadow p-3 mb-5  rounded"
     style="margin-top: 10px; background-color: beige;">
    <div class="container-fluid ">
    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Dé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_de in type_des %}
            <tr>
                {#<td>{{ type_de.id }}</td>#}
                <td>{{ type_de.des }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('type_des_show', {'id': type_de.id}) }}">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary" href="{{ path('type_des_edit', {'id': type_de.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun dés n'a été trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>


</div>
{% endblock %}
