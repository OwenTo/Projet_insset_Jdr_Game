{% extends 'base.html.twig' %}

{% block title %}Liste des Matériaux{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des Matériaux</h1>
{% if is_granted('ROLE_ADMIN') %}
    <a  class="ml-5  mr-5 btn btn-primary"href="{{ path('materiel_new') }}">Ajouter</a>
{% endif %}
<div class=" centerText   ml-5  mr-5 card  shadow p-3 mb-5  rounded"
     style="margin-top: 10px; background-color: beige;">
    <div class="container-fluid ">
    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Matériel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                {#<td>{{ materiel.id }}</td>#}
                <td>{{ materiel.typeMateriel }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('materiel_show', {'id': materiel.id}) }}">
                        <i class="fas fa-info-circle"></i>
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary" href="{{ path('materiel_edit', {'id': materiel.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucun matériaux n'a été trouvé </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    </div>
{% endblock %}
