<form method="post" action="{{ path('armure_delete', {'id': armure.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cette armure ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ armure.id) }}">
    <button class="btn btn-primary"><i class="fas fa-trash-alt"></i></button>
</form>
