{% extends 'base.html.twig' %}

{% block title %}Inventaire index{% endblock %}

{% block body %}
    <h1>Inventaire {{ title }}</h1>

    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Arme</th>
                <th>Personnage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>


        {% for inventaire in inventaires %}

            <tr>

                {#<td>{{ inventaire.id }}</td>#}
                <td>{{ inventaire.items.nomItemInventaire }}</td>
                <td>{{ inventaire.personnage.nomPersonnage }}</td>
                <td>
                    <a href="{{ path('inventaire_show_personnage_item', {'id': inventaire.id})  }}"  >show</a>
                    {#<a href="{{ path('inventaire_edit', {'id': inventaire.id}) }}">edit</a>#}
