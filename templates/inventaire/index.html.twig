            </tr>


        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if(personnage is not empty) %}
    <a href="{{ path('personnage_show', {'id': personnage.id}) }}">retour </a>
{% endif %}
{% endblock %}
